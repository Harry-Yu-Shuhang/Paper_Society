/* 公众号弹窗css */
.gongzhonghao-window {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.gongzhonghao-content {
  position: relative;
  width: 90%;
  max-width: 600rpx;
  padding: 20px;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.close-icon {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #333;
  cursor: pointer;
}

.text-section {
  margin-bottom: 16px;
  display: flex;
  flex-direction: column;
}

.text-line {
  font-size: 16px;
  color: #333;
  margin-bottom: 16rpx;
}

.qrcode-image {
  width: 8cm;
  height: 8cm;
  border-radius: 8px;
}

