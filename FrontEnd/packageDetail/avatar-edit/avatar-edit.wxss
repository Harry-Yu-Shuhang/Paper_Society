/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100vh;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #f9fbfc, #e9ecef);
  overflow: hidden; /* 防止溢出 */
}

/* 标题 */
.title {
  font-size: 30px;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 副标题 */
.subtitle {
  font-size: 18px;
  color: #666;
  margin-bottom: 50rpx;
  text-align: center;
  line-height: 1.5;
}

/* 头像选择按钮容器 */
.avatar-wrapper {
  margin-bottom: 40rpx;
  width: 200rpx;
  height: 200rpx;
  padding: 0;
  border: none;
  background-color: transparent;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 头像图片 */
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

/* 昵称输入框 */
.nickname-input {
  width: 85%;
  height: 100rpx;
  margin-bottom: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 18px;
  background-color: #fff;
  box-shadow: inset 0 3rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 按钮行 */
.button-row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 85%;
  margin-top:50rpx;
}

/* 提交按钮 */
.custom-button {
  height: 90rpx;
  font-size: 20px;
  border-radius: 45rpx; /* 圆角 */
  letter-spacing: 2px;
}

/* 取消按钮 */
.cancel-button {
  height: 90rpx;
  font-size: 20px;
  border-radius: 45rpx; /* 圆角 */
  letter-spacing: 2px;
  border: 1rpx solid #ccc;
}

.limit{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right:auto;
  margin-left:30rpx;
  margin-bottom: 5rpx;
}

/* 限制标题 */
.limit-text {
  margin-left: 6rpx;
  font-size: 10px;
  color: #999;
  text-align: center;
  line-height: 1.5;
  letter-spacing: 1px;
}

page{
  overflow-x: hidden;
}