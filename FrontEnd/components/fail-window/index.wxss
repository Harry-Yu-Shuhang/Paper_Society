/* 页面背景 */
.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: rgba(237, 237, 237, 0.8);
  z-index: 1000; /* 保证在最前 */
}

/* 加载窗 */
.loading-window {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #F9F5EB;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.1);
}

/* 图标样式 */
.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

/* 文字样式 */
.loading-text {
  font-size: 28rpx;
  color: #555555;
}