.container{
  display: flex;
  flex-direction: column;
  width:100%;
  align-items: center;
}

.girl-data{
  display:flex;
  flex-direction: column;
  margin-left: 375rpx;
  /* width:375rpx;
  height:439rpx; */
  padding: 12rpx 20rpx;
}

.girl-class{
  display:flex;
  flex-direction: row;
  align-items: center;
}

.girl-tag{
  margin-bottom: 5rpx;
  margin-left: 20rpx;
}

.girl-name{
  font-size: 50rpx;
  color:#444;
  font-weight: 500;
}

.girl-popularity{
  display:flex;
  flex-direction: column;
}

.popularity-data{
  display:flex;
  flex-direction: row;
  align-items: center;
}

.title-num{
  font-size: 28rpx;
  color: #555;
  margin-top:3rpx;
  margin-left:15rpx;
  width:95rpx;
  letter-spacing: 0.5px;
}

.title-rank{
  font-size: 32rpx;
  color: #666;
  font-weight: 450;
}

.introduction-title{
  color: #555;
  margin-top: 12rpx;
  letter-spacing: 2px;
}

.introduction-content{
  color:#777;
  font-size: 28rpx;
  letter-spacing: 2px;
  margin-top: 6rpx;
  min-height: 370rpx; /* 设置最小高度为 240rpx */
  white-space: normal; /* 允许内容自动换行 */
  overflow-wrap: break-word; /* 文字超出时自动换行 */
  display: block; /* 确保 text 标签可以撑开高度 */
}


