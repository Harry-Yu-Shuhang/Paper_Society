/* 骨架屏样式 */
.skeleton-profile {

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.skeleton-picture {
  width: 120rpx;
  height: 120rpx;
  background-color: #e0e0e0;
  border-radius: 50%;
  object-fit: cover;
  margin-left:25rpx;
}

.skeleton-name {
  width: 200rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
}

.skeleton-value {
  width: 60rpx;
  height: 40rpx;
  background-color: #e0e0e0;
  border-radius: 8rpx;
}

/* 骨架屏样式结束 */

