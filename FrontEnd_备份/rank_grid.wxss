.leaderboard__profiles {
  padding: 15rpx;
  display: grid;
  row-gap: 16rpx;
}

.leaderboard__profile {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}

.leaderboard__picture {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  object-fit: cover;
}

.leaderboard__name {
  font-size: 36rpx;
  color: #979cb0;
}

.leaderboard__value {
  font-size: 40rpx;
  font-weight: 700;
  color: #35d8ac;
}

.leaderboard {
  max-width: 100%;
  width: 100%;
  border-radius: 12rpx; /* 改成rpx */
}

.leaderboard__profiles {
  background-color: #fff;
  border-radius: 0 0 12rpx 12rpx; /* 改成rpx */
  padding: 30rpx 30rpx 40rpx; /* 改成rpx */
  display: grid;
  row-gap: 16rpx; /* 改成rpx */
}

.leaderboard__profile {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx; /* 改成rpx */
  overflow: hidden;
  border-radius: 20rpx; /* 改成rpx */
  box-shadow: 0 10rpx 14rpx -2rpx rgba(51, 51, 51, 0.23); /* 改成rpx */
  cursor: pointer;
  transition: transform 0.25s cubic-bezier(0.7, 0.98, 0.86, 0.98), box-shadow 0.25s cubic-bezier(0.7, 0.98, 0.86, 0.98);
  background-color: #fff;
}

.leaderboard__profile:hover {
  transform: scale(1.2);
  box-shadow: 0 18rpx 94rpx 22rpx rgba(51, 51, 51, 0.18); /* 改成rpx */
}

.leaderboard__picture {
  max-width: 100%;
  width: 120rpx; /* 改成rpx */
  height: 120rpx; /* 改成rpx */
  border-radius: 50%;
  box-shadow: 0 0 0 20rpx #ebeef3, 0 0 0 44rpx #f3f4f6; /* 改成rpx */
  object-fit: cover; /* 确保图片按照比例裁剪 */
}

.leaderboard__name {
  color: #979cb0;
  font-weight: 600;
  font-size: 40rpx; /* 改成rpx */
  letter-spacing: 1.28rpx; /* 改成rpx */
  margin-left: 24rpx; /* 改成rpx */
}

